<div class="d-flex justify-content-center gap-5 my-5">
<%= form_with model: @task do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title %>
  <%= t.label :details %>
  <%= t.text_field :details %>
<input id="checkbox" name="finished" type="checkbox" />
<label for="finished"></label>
  <%= t.submit %>
<% end %>
</div>
